{
    "celsiusTextfield": {
        "prototype": "matte/ui/input-text.reel",
        "properties": {
            "element": {"#": "celsius"}
        },
        "bindings": {
            "value": {"<->": "(@fahrenheitTextfield.value - 32) / 1.8"}
        }
    },

    "fahrenheitTextfield": {
        "prototype": "matte/ui/input-text.reel",
        "properties": {
            "element": {"#": "fahrenheit"},
            "value": "32"
        }
    },
    
    "barometer": {
        "prototype": "native/ui/input-range.reel",
        "properties": {
            "element": {"#": "barometer"}
        },
        "bindings": {
            "value": {"<->": "@fahrenheitTextfield.value"}
        }
    }
}
